
<%= simple_form_for(@tipo_campo) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :tipo_dato %>
    <%= f.input :descripcion %>
    <%= f.input :tiene_respuesta %>
    <%= f.association :tipo_seleccion %>
    <%= f.association :tipo_contenido %>
    <%= f.input :user_created_id %>
    <%= f.input :user_updated_id %>
    <%= f.input :usr_grab %>
    <%= f.input :usr_modi %>
    <%= f.input :estado %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
