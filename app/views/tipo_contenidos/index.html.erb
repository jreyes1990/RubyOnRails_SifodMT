<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="row">
      <div class="col-md-6 table-responsive-sm text-left mt-2">
        <h5 class="m-0 font-weight-bold text-primary">Gesti√≥n Tipos de Contenido</h5>
      </div>
      <div class="col-md-6 table-responsive-sm text-right">
        <% if tiene_permiso("BOTON NUEVO REGISTRO", "VER") %>
          <%= link_to new_tipo_contenido_path, class: "btn btn-success btn-sm mt-2" do %>
            <span class="icon text-green-50">
                <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text">AGREGAR</span>
          <% end %>
        <% end %>
        <%= link_to root_path, class: "btn btn-danger btn-sm mt-2" do %>
          <span class="icon text-red-50">
              <i class="fas fa-home"></i>
          </span>
          <span class="text">INICIO</span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-12 table-responsive-sm">
        <table id="datatable_tipos_contenido" class="table table-hover table-sm table-bordered display" width="100%" cellpadding="0" cellspacing="0">
          <thead class="thead-light">
            <tr>
              <th>Nombre</th>
              <th>Content type</th>
              <th>User created</th>
              <th>User updated</th>
              <th>Usr grab</th>
              <th>Usr modi</th>
              <th>Estado</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @tipo_contenidos.each do |tipo_contenido| %>
              <tr>
                <td><%= tipo_contenido.nombre %></td>
                <td><%= tipo_contenido.content_type %></td>
                <td><%= tipo_contenido.user_created_id %></td>
                <td><%= tipo_contenido.user_updated_id %></td>
                <td><%= tipo_contenido.usr_grab %></td>
                <td><%= tipo_contenido.usr_modi %></td>
                <td><%= tipo_contenido.estado %></td>
                <td><%= link_to 'Show', tipo_contenido %></td>
                <td><%= link_to 'Edit', edit_tipo_contenido_path(tipo_contenido) %></td>
                <td><%= link_to 'Destroy', tipo_contenido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>