<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="row">
      <div class="col-md-6 table-responsive-sm text-left mt-2">
        <h5 class="m-0 font-weight-bold text-primary">Configuración de Preguntas</h5>
      </div>
      <div class="col-md-6 table-responsive-sm text-right">
        <% if tiene_permiso("BOTON NUEVO REGISTRO", "VER") %>
          <%= link_to new_config_pregunta_path, class: "btn btn-success btn-sm mt-2" do %>
            <span class="icon text-green-50">
                <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text">AGREGAR</span>
          <% end %>
        <% end %>
        <%= link_to root_path, class: "btn btn-danger btn-sm mt-2" do %>
          <span class="icon text-red-50">
              <i class="fas fa-home"></i>
          </span>
          <span class="text">INICIO</span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-12 table-responsive-sm">
        <table id="datatable_config_preguntas" class="table table-hover table-sm table-bordered display" width="100%" cellpadding="0" cellspacing="0">
          <thead class="thead-light">
            <tr>
              <th class="text-center">ID</th>
              <th>Empresa</th>
              <th>Area</th>
              <th>Tipo campo</th>
              <th>Nombre</th>
              <th>Instrucción</th>
              <th class="text-center">¿Tiene Párametro?</th>
              <th class="text-center">¿Tiene Sub-Pregunta?</th>
              <th class="text-center">Estado</th>
              <% if tiene_permiso("BOTON EDITAR REGISTRO", "VER") %>
              <th class="text-center"></th>
              <% end %>
              <% if tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>
              <th class="text-center"></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @config_preguntas.each do |cfg_p| %>
              <tr>
                <td class="text-center"><%= cfg_p.id %></td>
                <td><%= cfg_p.empresa_id %></td>
                <td><%= cfg_p.area_id %></td>
                <td><%= cfg_p.tipo_campo.try(:nombre) %></td>
                <td><%= cfg_p.nombre %></td>
                <td><%= cfg_p.descripcion %></td>
                <td class="text-center"><%= valida_pregunta(cfg_p.tiene_parametro) %></td>
                <td class="text-center"><%= valida_pregunta(cfg_p.tiene_sub_pregunta) %></td>
                <td class="text-center"><%= format_estado(cfg_p.estado) %></td>
                <% if tiene_permiso("BOTON EDITAR REGISTRO", "VER") %>
                  <td class="text-center">
                    <% if cfg_p.estado == "A" %>
                      <%= link_to edit_config_pregunta_path(cfg_p), 
                          class: "btn btn-outline-info btn-sm",
                          "data-custom-class": "popover-info", title: "ACTUALIZAR", "data-content": "#{cfg_p.id} | #{cfg_p.nombre.capitalize}" do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                    <% end %>
                  </td>
                <% end %>
                <% if tiene_permiso("BOTON ELIMINAR REGISTRO", "VER") %>
                  <td class="text-center">
                    <% if cfg_p.estado == "A" %>
                      <%= link_to  inactivar_config_pregunta_path(:id => cfg_p.id), 
                          class: "btn btn-outline-danger btn-sm btn_status_unidad_medida", 
                          data: { status: "Inactivar", nombre: "#{cfg_p.nombre}" },
                          "data-custom-class": "popover-danger", title: "INACTIVAR", "data-content": "#{cfg_p.id} | #{cfg_p.nombre.capitalize}" do %>
                        <i class="fas fa-trash-alt"></i>
                      <% end %>
                    <% else %>
                      <%= link_to  activar_config_pregunta_path(:id => cfg_p.id), 
                          class: "btn btn-outline-success btn-sm btn_status_unidad_medida", 
                          data: { status: "Activar", nombre: "#{cfg_p.nombre}" },
                          "data-custom-class": "popover-success", title: "ACTIVAR", "data-content": "#{cfg_p.id} | #{cfg_p.nombre.capitalize}" do %>
                        <i class="fas fa-trash-restore-alt"></i>
                      <% end %>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>