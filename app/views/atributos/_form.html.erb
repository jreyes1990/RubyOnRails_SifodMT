<!-- Inicio atributos -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Gestión de Atributos</h6>
  </div>
  <div class="card-body">

    <div class="container-fluid">
      <div class="row">

        <div class="col-md-12">
          <%= form_with(model: atributo, local: true) do |form| %>
          <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">

              <% if atributo.errors.any? %>
              <div id="error_explanation">
                <h6><%= pluralize(atributo.errors.count, "error") %> Prohibido que se guarde este atributo:</h6>

                <ul>
                  <% atributo.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>

              <div class="field">
                <%= form.label :nombre %>
                <%= form.text_field :nombre, class:"form-control", type: "txt", placeholder: "Ingrese solo letras", required: true, autofocus: true, pattern: "^[A-Za-zñÑáéíóúÁÉÍÓÚ- _\s]+$" %>
              </div>

              <div class="field">
                <%= form.label :descripcion %>

                <%= form.text_area :descripcion, size: '40x5', class:"form-control", type: "txt", placeholder: "", required: true %>
              </div>

            </div>
            <div class="col-md-4">
            </div>
          </div>
          <br />
          <div class="row">
            <div class="col-md-12 text-right">
          <% if tiene_permiso("BOTON REGISTRAR", "VER") %>
              <%= button_tag form.submit, class: "btn btn-success btn-sm" do %>
              <span class="icon text-50">
                <i class="fas fa-edit"></i>
              </span>
              <span class="text">REGISTRAR</span>
              <%end%>
          <% end %>
              <%= link_to atributos_path, class: "btn btn-outline-danger btn-sm" do %>
              <span class="icon text-red-50">
                <i class="fas fa-arrow-circle-left"></i>
              </span>
              <span class="text">CANCELAR</span>
              <%end%>

            </div>
          </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>