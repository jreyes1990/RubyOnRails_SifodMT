
<%= simple_form_for(@config_formulario_pregunta) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :empresa_id %>
    <%= f.input :area_id %>
    <%= f.association :config_formulario %>
    <%= f.association :config_pregunta %>
    <%= f.association :config_sub_pregunta %>
    <%= f.association :unidad_medida %>
    <%= f.input :requerido %>
    <%= f.input :posicion %>
    <%= f.input :user_created_id %>
    <%= f.input :user_updated_id %>
    <%= f.input :usr_grab %>
    <%= f.input :usr_modi %>
    <%= f.input :estado %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
